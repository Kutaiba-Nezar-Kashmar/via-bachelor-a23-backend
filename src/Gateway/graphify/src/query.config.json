{
    "queries": [
        {
            "name": "events",
            "args": [],
            "resolver": {
                "host": "http://eventmanagementservice-service",
                "port": 80,
                "endpoint": "/api/v1/events",
                "method": "GET"
            }
        },
        {
            "name": "allPublicEvents",
            "args": [],
            "resolver": {
                "host": "http://eventmanagementservice-service",
                "port": 80,
                "endpoint": "/api/v1/events/allPublicEvents",
                "method": "GET"
            }
        },
        {
            "name": "event",
            "args": [
                {
                    "name": "id",
                    "type": "Int",
                    "for": "urlPath"
                }
            ],
            "resolver": {
                "host": "http://eventmanagementservice-service",
                "endpoint": "/api/v1/events/{id}",
                "port": 80,
                "method": "GET"
            }
        },
        {
            "name": "posts",
            "args": [
                {
                    "name": "userId",
                    "type": "Int",
                    "for": "urlQueryParam"
                }
            ],
            "resolver": {
                "host": "https://jsonplaceholder.typicode.com",
                "endpoint": "/posts",
                "port": 443,
                "method": "GET"
            }
        },
        {
            "name": "post",
            "args": [
                {
                    "name": "id",
                    "type": "Int!",
                    "for": "urlPath"
                }
            ],
            "resolver": {
                "host": "https://jsonplaceholder.typicode.com",
                "endpoint": "/posts/{id}",
                "port": 443,
                "method": "GET"
            }
        }
    ],
    "mutations": [
        {
            "name": "createPost",
            "args": [
                {
                    "name": "userId",
                    "type": "Int!",
                    "for": "body"
                },
                {
                    "name": "title",
                    "type": "String!",
                    "for": "body"
                },
                {
                    "name": "body",
                    "type": "String!",
                    "for": "body"
                }
            ],
            "resolver": {
                "host": "https://jsonplaceholder.typicode.com",
                "endpoint": "/posts",
                "port": 80,
                "headers": {
                    "Content-Type": "application/json; charset=UTF-8"
                },
                "method": "POST"
            }
        }
    ]
}
